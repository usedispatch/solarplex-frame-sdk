{
  "compilerOptions": {
    "target": "es2021",                         
    "module": "commonjs",                    
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": ["ES2021", "dom" ],
    "noImplicitAny": false,
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "**/*.spec.ts"]
}